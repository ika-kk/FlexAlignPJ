<Window x:Class="FlexAlignPJ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlexAlignPJ"
        xmlns:vm="clr-namespace:FlexAlignPJ.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1440">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--左側-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--左上_入力画像表示-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Source">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" IsReadOnly="True" Text="{Binding SourceImageFileName, Mode=OneWay}"/>
                            <Button Grid.Column="1" Content="reference" Command="{Binding ReferenceCommand}" CommandParameter="source"/>
                        </Grid>
                        <Border Grid.Row="1" Margin="3" BorderThickness="1" BorderBrush="Gray">
                            <Image Source="{Binding SourceBmp}"/>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Target">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" IsReadOnly="True" Text="{Binding TargetImageFileName, Mode=OneWay}"/>
                            <Button Grid.Column="1" Content="reference" Command="{Binding ReferenceCommand}" CommandParameter="target"/>
                        </Grid>
                        <Border Grid.Row="1" Margin="3" BorderThickness="1" BorderBrush="Gray">
                            <Image Source="{Binding TargetBmp}"/>
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>

            <!--左下_マッチング設定-->
            <GroupBox Grid.Row="1" Header="Align settings">
                
            </GroupBox>
        </Grid>

        <!--右側-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--右上_マスク設定-->
            <GroupBox Grid.Row="0" Header="Mask settings">
                
            </GroupBox>

            <!--右下_結果画像-->
            <GroupBox Grid.Row="1" Header="Result">
                
            </GroupBox>
        </Grid>
    </Grid>
</Window>
