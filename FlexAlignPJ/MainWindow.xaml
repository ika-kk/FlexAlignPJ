<Window x:Class="FlexAlignPJ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlexAlignPJ"
        xmlns:vm="clr-namespace:FlexAlignPJ.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1440">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--左側-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--左上_入力画像表示-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Source">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" IsReadOnly="True" Text="{Binding SourceImageFileName, Mode=OneWay}"/>
                            <Button Grid.Column="1" Content="reference" Command="{Binding ReferenceCommand}" CommandParameter="source"/>
                        </Grid>
                        <Border Grid.Row="1" Margin="3" BorderThickness="1" BorderBrush="Gray">
                            <Image Source="{Binding SourceBmp}"/>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Target">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" IsReadOnly="True" Text="{Binding TargetImageFileName, Mode=OneWay}"/>
                            <Button Grid.Column="1" Content="reference" Command="{Binding ReferenceCommand}" CommandParameter="target"/>
                        </Grid>
                        <Border Grid.Row="1" Margin="3" BorderThickness="1" BorderBrush="Gray">
                            <Image Source="{Binding TargetBmp}"/>
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>

            <!--左下_マッチング設定-->
            <GroupBox Grid.Row="1" Header="Align settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Content="Execute" Command="{Binding ExecuteMatchingCommand}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock TextAlignment="Right" Text="{Binding TotalMatchPointsCount, StringFormat=Total points : {0}}"/>
                            <TextBlock TextAlignment="Right" Text="{Binding UsePointsCount, StringFormat=Use points : {0}}"/>
                            <TextBlock TextAlignment="Right" Text="{Binding UsePointsPercent, StringFormat=Usage : {0:N1}%}"/>
                            <Button Content="Update matching" Command="{Binding UpdateMatchingImageCommand}"/>
                        </StackPanel>
                        
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Margin="3" Stretch="Fill"
                                   Source="{Binding MatchScoreHistogramBmp}"/>
                            <Slider Grid.Row="1" Margin="3" Minimum="0.0" Maximum="1.0" SmallChange="0.01" LargeChange="0.2" Value="{Binding UsePointsRatio}"/>
                        </Grid>
                    </Grid>
                    
                    <Border Grid.Row="2" Margin="3" BorderThickness="1" BorderBrush="Gray">
                        <Image Source="{Binding MatchResultBmp}"/>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>

        <!--右側-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--右上_マスク設定-->
            <GroupBox Grid.Row="0" Header="Mask settings">
                
            </GroupBox>

            <!--右下_結果画像-->
            <GroupBox Grid.Row="1" Header="Result">
                
            </GroupBox>
        </Grid>
    </Grid>
</Window>
